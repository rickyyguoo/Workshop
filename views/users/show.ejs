<% include ../partials/header %>
    <div class="row">
        <div class="col-md-4">
            <h1><%= user.firstName + " " + user.lastName %></h1>
            <div class="thumbnail">
                <img src="<%= user.avatar %>" alt="user profile image">
                <div class="caption">
                    <a href="mailto:<%= user.email %>">
                        <%= user.email %>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <h3><%= user.username %>'s events:</h3>
            <ul>
                <% viewevents.forEach(function(viewevent) { %>
                    <li>
                        <a href="/viewevents/<%= viewevent.id %>">
                            <%= viewevent.name %>
                        </a>
                    </li>
                    <% }); %>
            </ul>
        </div>
    </div>
