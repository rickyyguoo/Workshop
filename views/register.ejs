<% include ./partials/header %>
    <div class="row">
        <header class="jumbotron hero">
            <div class="container-center">
                <h1 style="text-align: center">Register Form</h1>
                <div>
                    <form action="/register" method="post">
                        <div class="md-form">
                            <i class="fa fa-user prefix grey-text"></i><input class="form-control" type="text" name="username" placeholder="username">
                        </div>
                        <div class="md-form">
                            <i class="fa fa-lock prefix grey-text"></i><input class="form-control" type="password" name="password" placeholder="password">
                        </div>
                        <div class="md-form">
                            <i class="fa fa-pencil prefix grey-text"></i><input class="form-control" type="text" name="firstName" placeholder="first name">
                        </div>
                        <div class="md-form">
                            <i class="fa fa-pencil prefix grey-text"></i><input class="form-control" type="text" name="lastName" placeholder="last name">
                        </div>
                        <div class="md-form">
                            <i class="fa fa-envelope prefix grey-text"></i><input class="form-control" type="email" name="email" placeholder="email">
                        </div>
                        <div class="md-form">
                            <i class="fa fa-tag prefix grey-text"></i><input class="form-control" type="text" name="avatar" placeholder="avatar url">
                        </div>
                        <!--                 <div class="form-group">
                    <input class="form-control" type="text" name="adminCode" placeholder="admin code">
                </div> -->
                        <div class="form-group text-center">
                            <button class="btn btn-lg btn-deep-orange">Sign up</button>
                        </div>
                    </form>
                    <center><a href="/campgrounds">Go Back</a></center>
                </div>
            </div>
            <% include ./partials/footer %>