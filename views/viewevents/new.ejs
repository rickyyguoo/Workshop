<% include ../partials/header %>
    <div class="rowlogin">
        <header class="jumbotron">
            <div class="container-center">
                <h1 style="text-align: center">Create a New Events!</h1>
                <div style="width: 30%; margin: 25px auto;">
                    <form action="/viewevents" method="POST">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Events Title">
                        </div>
                        <div class="form-group">
                            <label for="image">Image Url</label>
                            <input class="form-control" type="text" name="image" id="image" placeholder="https://source.unsplash.com/TCCCKgdFmBo">
                        </div>
                        <div class="form-group">
                            <label for="cost">Cost</label>
                            <input class="form-control" type="number" name="cost" id="cost" placeholder="Enter Event Price" step="10000" min="0" required>
                        </div>
                        <div class="form-group">
                            <label for="location">Location</label>
                            <input class="form-control" type="text" name="location" id="location" placeholder="UPH Medan Lippo Plaza.">
                        </div>
                        <div class="form-group basic-textarea rounded-corners shadow-textarea">
                            <label for="description">Description</label>
                            <textarea class="form-control z-depth-1" id="description" name="description" rows="3" placeholder="Write something here..."></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                        </div>
                    </form>
                    <a href="/viewevents">Go Back</a>
                </div>
            </div>
        </header>
    </div>